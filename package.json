{
  "name": "antigravity-monitor",
  "displayName": "AI Agent Usage Monitor",
  "description": "Track, visualize, and analyze AI agent usage with a team dashboard, leaderboards, and detailed token analytics.",
  "version": "0.0.5",
  "publisher": "narun-dev",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/narun-pilot/vscode-antigravity-monitor"
  },
  "homepage": "https://github.com/narun-pilot/vscode-antigravity-monitor#readme",
  "bugs": {
    "url": "https://github.com/narun-pilot/vscode-antigravity-monitor/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravity.showMetrics",
        "title": "Antigravity Monitor: Show AI Usage Metrics"
      },
      {
        "command": "antigravity.showDailyChart",
        "title": "Antigravity Monitor: Show Daily Token Usage Chart"
      },
      {
        "command": "antigravity.exportStats",
        "title": "Antigravity Monitor: Export AI Stats to JSON"
      },
      {
        "command": "antigravity.exportAndUpload",
        "title": "Antigravity Monitor: Export & Upload to Dashboard"
      }
    ],
    "configuration": {
      "title": "AI Monitor",
      "properties": {
        "antigravity.trackKeywords": {
          "type": "array",
          "default": [
            "ai",
            "chat",
            "copilot",
            "antigravity",
            "generate"
          ],
          "description": "List of command keywords to track as AI activity"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "sql.js": "^1.14.0"
  }
}
